extends ./layouts/main.pug

block content
    main(class="container")
        div(class="redirectBottom")
            a(href="/productos/crear" class="btn btn-secondary btn-lg p-2 m-2") Cargar nuevo producto
        h1(class="display-1 text-center textColor my-3") Lista de Productos
        if productos.length >0
            table(class="table table-dark table-hover align-middle")
                thead
                    tr
                        td(scope="col", class="text-center") Producto
                        td(scope="col", class="text-center") Precio
                        td(scope="col", class="text-center") Imagen
                tbody(class="table-group-divider")
                    each producto in productos
                        tr
                            th(scope="row" class="text-center")= producto.nombre
                            td(class="text-center")=producto.precio
                            td(class="text-center") 
                                img(height="75px")&attributes({src: producto.imagen, alt: producto.nombre})  
        else
            div(class="row justify-content-center mt-5")
                div(class="col-md-5")
                    div(class="card")
                        div(class="card-body")
                            h2(class="display-5 text-center") Lista vacia
                            p(class="lead") No se encontraron Productos